@import "./reset"

body
	font-family sans-serif


#app
	padding 1em
	ul#form
		margin-top 1em
		& > li
			padding 0.5em
			&:nth-child(even)
				background-color #ddf
			&:nth-child(odd)
				background-color #dfd
			& > div
				label
					vertical-align top
					display inline-block
					width 120px
					& + *
						display inline-block

.hire-input
	height 1.5em
	& > input
		height 100%
		border 0

.hire-select
	& > .input-container
		width 200px
		height 1.5em
		line-height 1.5em
		background-color #fff

		& > button
			height 100%
			width 25px
			float right

		& > .input
			display inline-block
			height 100%
			width calc(100% - 25px)

	& > .hire-options
		position absolute
		background-color white
		width 175px

.hire-multi-form
	& >.form-list
		& > .form
			margin-top 1em
			& > div
				float right
				width calc(100% - 40px)
				& > ul
					clear both
					margin-bottom 1em
			& > .hire-remove-form
				float left
				margin-right 15px
				width 25px

.names-form
	& > ul
		& > li
			display inline-block
			margin-right 0.5em

.hire-login
	float right
	margin-right 400px